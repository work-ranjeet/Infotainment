<div class="row">
    <div class="col-xs-12" infinite-scroll="pagingFunction()" infinite-scroll-distance="2" infinite-scroll-delay="100" infinite-scroll-disable="{{PartialNewsBusy}}" infinite-scroll-immediate-check="false">
        
        <div class="row delay" ng-repeat="news in PartialNewsList">
            <div ng-if="!news.IsRss" id="topNewsList" class="col-xs-12 list-container">
                <a data-ng-href="@HttpUtility.UrlDecode(Url.Action("NewsDetail", "{{NewsListController}}", new { NewsId = "{{news.NewsID}}" }))" target="_self">
                    <span class="news-list-heading">{{news.Heading}}</span>
                </a>
                
                <div class="pull-left padding-right-five">
                    <img class="news-list-image" ng-src="~/{{(news.ImageUrl == null || news.ImageUrl == '' ? 'Content/images/india.png': news.ImageUrl)}}" />
                </div>

                <a href="#" target="_self">
                    <span class="news-list-editor">{{news.DttmCreated | hindiDate}}</span>
                </a>
                <p>
                    <span class="news-list-short-desc">{{news.ShortDesc}}</span>
                    <a data-ng-href="@HttpUtility.UrlDecode(Url.Action("NewsDetail", "{{NewsListController}}", new { NewsId = "{{news.NewsID}}" }))" class="text-primary" target="_self">और पढ़ें ..</a>
                </p>
            </div>
            <div ng-if="news.IsRss &&  news.ImageUrl!= null && news.ImageUrl != ''" id="topNewsList" class="col-xs-12 list-container">
                <a href="#" target="_self">
                    <span class="news-list-heading">{{news.Heading}}</span>
                </a>
                <div class="pull-left padding-right-five">
                    <img class="news-list-image" ng-src="{{news.ImageUrl}}" />
                </div>

                <a href="#" target="_self">
                    <span class="news-list-editor">{{news.DttmCreated | hindiDate}}</span>
                </a>
                <p>
                    <span class="news-list-short-desc">{{news.ShortDesc}}</span>
                </p>
            </div>
            <hr ng-if="!news.IsRss || (news.IsRss &&  news.ImageUrl!= null && news.ImageUrl != '')" />
        </div>
        <div ng-show="loadingMore" style="height:100px;" class="row loading">
            <div class="col-xs-12 btn btn-lg btn-warning">
                <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate">Loading.....</span>
            </div>
        </div>
    </div>
</div>
