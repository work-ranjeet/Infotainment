@{
    ViewBag.Title = "NewsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="topNews" class="container" ng-controller="newsDetailCtrl">
    <div class="row">        
        <div class="col-xs-9">
            <div class="row" ng-repeat="news in PartialNewsList">
                <div id="topNewsList" class="col-xs-12 list-container">
                    <a data-ng-href="@HttpUtility.UrlDecode(Url.Action("NewsDetail", "MainNews", new { NewsId = "{{news.NewsID}}" }))" target="_self">
                        <span class="news-list-heading">{{news.Heading}}</span>
                    </a>
                    <div class="pull-left padding-right-five">
                        <img class="news-list-image" ng-src="{{news.ImageUrl}}" />
                    </div>

                    <a href="#" target="_self">
                        <span class="news-list-editor">{{news.EditorName}} &nbsp;|&nbsp;{{news.DttmCreated | hindiDate}}</span>
                    </a>
                    <p>
                        <span class="news-list-short-desc">{{news.ShortDesc}}</span>
                        <a data-ng-href="@HttpUtility.UrlDecode(Url.Action("NewsDetail", "MainNews", new { NewsId = "{{news.NewsID}}" }))" class="text-primary" target="_self">और पढ़ें ..</a>
                    </p>
                </div>
                <hr />
            </div>
        </div>

        <div class="col-xs-3">
            <div class="advetise round-corner" ng-repeat="advertise in advertiseList">
                <a href="{{advertise.WebLink}}" target="_self">
                    <div class="text-border">
                        <img class="image" src="{{advertise.ImgUrl}}" alt="24 Hours dental service">
                        <span class="caption">{{advertise.Heading}}</span>
                        <span class="url">{{advertise.WebUrl}}</span>
                        <span class="text">{{advertise.ShortDesc}}</span>
                    </div>
                </a>
                <div class="space-top3"></div>
            </div>
        </div>
    </div>
</div>
