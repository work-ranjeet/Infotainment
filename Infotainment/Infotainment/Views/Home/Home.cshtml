@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* Top ten news *@
<div id="topNews" class="container" ng-controller="TopNewsCtrl">

    <div class="row">
        <div class="col-xs-8">
            <div class="row">
                <div id="topNewsItem" class="col-xs-6 col-lg-6" ng-repeat="news in imageNewsList">

                    <div ng-show="news.ImageUrl.length > 0" class="row">
                        <div class="col-xs-12">
                            <a data-ng-href="@HttpUtility.UrlDecode(Url.Action("NewsDetail", "MainNews", new { NewsId = "{{news.NewsID}}" }))" target="_self">
                                <span class="news-heading"> {{news.Heading}}</span>
                                <div class="pull-left padding-right-five">
                                    <img class=" news-image" ng-src="{{news.ImageUrl}}" alt=" ">
                                </div>
                                <p class="news-text padding-top-2">
                                    {{news.ShortDesc}}&nbsp;&nbsp;
                                    <span class="news-date text-right" style="white-space:nowrap">{{news.DttmCreated | hindiDate}}</span>

                                </p>
                            </a>
                            <hr class="style-two" />
                        </div>
                    </div>
                </div>
                <div id="topNewsItemDesc" class="col-xs-6 col-lg-6" ng-repeat="news in simpleNewsList">
                    <div class="row">
                        <div class="col-xs-12">
                            <a data-ng-href="@HttpUtility.UrlDecode(Url.Action("NewsDetail", "MainNews", new { NewsId = "{{news.NewsID}}" }))" target="_self">
                                <span class="news-heading"> {{news.Heading}}</span>
                                <p class="news-text padding-top-2">{{news.ShortDesc}}&nbsp;&nbsp;<span class="news-date text-right" style="white-space:nowrap">{{news.DttmCreated | hindiDate}}</span></p>
                            </a>
                            <hr class="style-two" />
                        </div>
                    </div>
                </div>

                <a href="@HttpUtility.UrlDecode(Url.Action("NewsList", "MainNews", new { NewsType = "{{NewsType}}" }))" style="width:100%;" class="show-all">
                    <div><bdi>और पढ़ें - आज की बाकी खबरें...</bdi></div>
                </a>
            </div>
