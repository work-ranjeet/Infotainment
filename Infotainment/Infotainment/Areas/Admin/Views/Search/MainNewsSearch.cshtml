@model Infotainment.Areas.Admin.Models.TopNewsListFilter

@{
    ViewBag.Title = "MainNewsSearch";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#DateFrom').datepicker({ dateFormat: "d-M-yy" });
            $('#DateTo').datepicker({ dateFormat: "d-M-yy" });
        });
    </script>
}
@using (Html.BeginForm("MainNewsSearch", "Search", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <section id="NewsDetails" class="admin-section">
        <div id="content" class="content" ng-controller="searchCtrl">
            <div id="container" class="round-corner-top grid-filter-control">
                <table style="width:100%; border:0px; border-collapse:collapse; padding:0px; border-spacing:0px;">
                    <tr>
                        <td class="text-left" style="width:15%;">
                            <span class="control-label">Date from:</span>
                            <input id="DateFrom" name="DateFrom" type='text' class="form-control" style="height:22px;" value="@Model.DateFrom.ToString("dd-MMM-yyyy")" />
                        </td>
                        <td class="text-left" style="width:15%;">
                            <span class="control-label">Date to:</span>
                            <input id="DateTo" name="DateTo" type='text' class="form-control" style="height:22px;" value="@Model.DateTo.ToString("dd-MMM-yyyy")" />
                        </td>
                        <td class="text-right" style="width:5%; vertical-align:bottom;">
                            @Html.CheckBoxFor(m => m.IsActive)
                        </td>
                        <td class="text-left" style="width:15%; vertical-align:bottom;">
                            &nbsp;Is Active
                        </td>
                        <td class="text-right" style="width:5%; vertical-align:bottom;">
                            @Html.CheckBoxFor(m => m.IsApproved)
                        </td>
                        <td class="text-left" style="width:15%; vertical-align:bottom;">&nbsp;Is Approved</td>
                        <td class="text-left" style="width:20%;">
                            <span class="control-label">Header:</span>
                            <input type="text" class="form-control" style="height:22px;" name="Header" id="Header"/>
                        </td>
                        <td class="text-right" style="width:10%; vertical-align:bottom;">
                            <input class="btn btn-default" style="height:22px; padding:0 10px 0 10px;" type="submit" value="Submit">
                        </td>
                    </tr>
                </table>

            </div>

            <div id="grid" class="grid-control table-responsive">
                <table class="table table-hover table-condensed">
                    <thead class="boxHeader">
                        <tr>
                            <th style="display:none;">TopNewsID</th>
                            <th class="text-left" width="2%">Order</th>
                            <th class="text-left" width="10%">Approval Status</th>
                            <th class="text-left" width="10%">Active Status</th>
                            <th class="text-left" width="15%">Heading</th>
                            <th class="text-left" width="45%">Sort Desc</th>
                            @*<th class="text-left" width="16%">Editor Name</th>*@
                            <th class="text-left" width="18%">Created Date Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model.TopNewsList)
                            {
                                <tr>
                                    <td style="display:none;">
                                        <input id="IsActiveHidden" type="hidden" value=">@item.TopNewsID" name="TopNewsID" />
                                    </td>
                                    <td>@item.DisplayOrder</td>
                                    <td>@(item.IsApproved == 1 ? "Approved" : "Not Approved")</td>
                                    <td>@(item.IsActive == 1 ? "Active" : "Not Active")</td>
                                    <td>@item.Heading </td>
                                    <td>@item.ShortDescription </td>
                                    <td>@item.DttmCreated</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </section>

}



