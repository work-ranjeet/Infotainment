@model Infotainment.Areas.Admin.Models.NewsApproval

<tr>
    <td style="display:none;">@Html.HiddenFor(m => m.TopNewsID)</td>
    <td>@Html.CheckBoxFor(m => m.Selected, new { @class = "chkSelect" })</td>
    @*<td class="text-center">
            <img src="@Model.ImageUrl" alt="" width="20">
        </td>*@
    <td>
        @Model.Heading
    </td>
    <td class="text-center">
        <span style="font-size:100%;" class="@(Model.IsApproved == 1 ? "label label-success" : "label label-warning")">
            @(Model.IsApproved == 1 ? "Approved" : "Approval Pending")
        </span>
    </td>
    <td class="text-center">
        <span style="font-size:100%; padding:4px; display:inline; float:left;" class="@(Model.IsTopNews == 1 ? "label label-danger" : "label label-success")">
            @(Model.IsTopNews == 1 ? "Yes" : "NA")
        </span>
    </td>
    <td>@Model.DttmCreated</td>
    <td>
        @{
            var url = HttpUtility.UrlDecode(Url.Action("UpdateNews", "International", new { NewsID = Model.TopNewsID }));
        }

        <a href="#" style="font-size:100%;" class="label label-warning" ng-click="OpenWindow('@url');"><i class="et-edit"></i>Update</a>
    </td>
</tr>

