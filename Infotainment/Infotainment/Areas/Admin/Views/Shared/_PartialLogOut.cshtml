@using Infotainment.Data
@using Infotainment.Data.Entities
<div style="height:50px;">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @if (Request.IsAuthenticated)
    {
        var userDetail = (IUsers)Session[Constants.UserSessionKey];
        if (userDetail != null)
        {
            <div class="admin-header-user">
                <div class="pull-left"  style="padding-top:5px;">
                    @*<bdi>Welcome &nbsp; @Html.ActionLink(userDetail.FName, "UserDetails", "Account")</bdi>*@
                    <bdi class="text-info">Welcome &nbsp;@userDetail.FName</bdi>
                </div>
                <div class="pull-right" style="padding-top:5px;">
                    @*<bdi class="loginButton logOut">*@
                        <a href="/Admin/Account/Logout" class="btn btn-danger">Log Out</a>
                    @*</bdi>*@
                </div>
                <div class="pull-clear"></div>
            </div>
        }
    }
</div>
